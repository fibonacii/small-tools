<link rel="stylesheet" href="../../public/css/plus.css/login_y.css"/>
<script src="http://static.geetest.com/static/tools/gt.js"></script>
<script type="text/javascript" src="../../public/js/libs/rsa/jsencrypt.js"></script>
<script type="text/javascript" src="../../public/js/base/baseInput.js"></script>
<script type="text/javascript" src="../../public/js/user/login.js"></script>

<body >
<div class="container">
    <h1 >这是登录页</h1>
    <p id="notification"></p>
    <div class="row myCenter">
        <div class="col-md-offset-4">
            <form class="form-horizontal">
                <div class="form-group ">
                    <div class="input-group input-group-lg col-lg-5">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <input type="text" name="username" value="" class="form-control" placeholder="请输入注册邮箱" id="email">
                    </div>
                </div>
                <div class="form-group ">
                    <div class="input-group input-group-lg col-lg-5">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                        <input id="passWord" type="password" name="password" class="form-control" placeholder="密码">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-lg col-lg-6">
                        <div id="embed-captcha"></div>
                        <p id="wait" class="show">正在加载验证码......</p>
                        <p id="notice" style="color: red" class="hide">请先拖动验证码到相应位置</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-lg col-lg-5">
                        <button type="button" class="btn btn-primary btn-block " id="login">登 录</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="container">
                        <div class="row-fluid">
                            <div class="col-md-2">
                                <a href="#">忘记密码?</a>
                            </div>
                            <div class="col-md-4 ">
                                <a href="/user/register">没有账号,去注册</a></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
