<%- include('../components/header') %>
<link rel="stylesheet" href="../../public/css/plus.css"/>
<script type="text/javascript" src="../../public/js/libs/rsa/jsencrypt.js"></script>
<script type="text/javascript" src="../../public/js/base/baseInput.js"></script>
<script type="text/javascript" src="../../public/js/public/ajaxFileUpload.js"></script>
<script type="text/javascript" src="../../public/js/user/register.js"></script>

<% /* 右半侧弄个花哨的图挂上去，后面再看 */ %>
<div class="container">
    <h1 >这是注册页</h1>
    <p id="notification"></p>
    <div class="row myCenter">
    <div class="col-md-offset-4">
    <form class="form-horizontal">
        <div class="form-group ">
            <div class="col-lg-5">
                <label  class="control-label">邮箱:</label>
                <input type="text" class="form-control input-lg" id="mailBox" placeholder="请输入邮箱"/>
             </div>
        </div>
        <div class="form-group ">
            <div class="col-lg-5">
                <label  class="control-label">用户名:</label>
                <input type="text" class="form-control input-lg" id="userName" placeholder="请输入用户名"/>
            </div>
        </div>

        <% /*对输入密码进行密码强度校验*/%>
        <div class="form-group ">
            <div class="col-lg-5">
            <label  for="passWord">密码:</label>
            <input type="password" id="passWord" class="form-control input-lg" placeholder="请输入密码,最少6位"/>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-lg-5">
            <label  for="passWord2">密码确认:</label>
            <input type="password" id="passWord2" class="form-control input-lg" placeholder="请再次输入密码"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-5">
                <label for="gender">性别:</label>
                <select class=" dropdown-menu-left" id="gender">
                    <option value="m">男</option>
                    <option value="f">女</option>
                    <option value="x">保密</option>
                </select>
            </div>
        </div>
        <div class="form-group field required">
            <div class="col-lg-5">
                <label>头像:</label>
                <input type="file" id="avatar" name="file">
                <input type="button" id="fileUpload" name="fileUpload"  value="上传头像">
                <span id="avatar-message"></span>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-lg-5">
                <label  for="inputAlpha">验证码：</label>
                <div>
                    <div style="float: left;width:49%">
                        <input type="text" id="inputAlpha" class="form-control input-lg" placeholder="请输入验证码" >
                    </div>
                    <div style="float: right;width:49%">
                        <input type="button" class="btn btn-block code" id="code" style="color:#357ebd;font-weight:bold;font-style:italic;letter-spacing: 10px";>
                    </div>
                </div>
            </div><br>
            <h4 class="text-error" id="message"></h4>
        </div>
        <div class="form-group">
            <div class="col-sm-5 ">
                <button type="submit" class="btn btn-primary btn-block " id="sign_up">注 册</button>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2">
                <text >已有账号，去登录>>></text>
                <a href="/user/login" class="btn btn-primary" id="login">登录</a>
            </div>
        </div>

     </form>
     </div>
    </div>
</div>
<%- include('../components/footer') %>