<%- include('../components/header') %>


<div class="container">
    <h1 >这是登录页</h1>
    <div class="row myCenter">
        <div class="col-md-offset-4">
            <form class="form-horizontal">
                <div class="form-group ">
                    <div class="col-lg-5">
                       <label  class="control-label">用户名:</label>
                       <input type="text" class="form-control input-lg" id="userName" placeholder="请输入用户名"/>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-lg-5">
                        <label  for="passWord">密码:</label>
                        <input type="password" id="passWord" class="form-control input-lg" placeholder="请输入密码"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 ">
                        <button type="button" class="btn btn-primary btn-block " id="login">登 录</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2">
                        <text>没有账号，去注册>>></text>
                        <a href="/user/register" class="btn btn-primary" id="register">注册</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
