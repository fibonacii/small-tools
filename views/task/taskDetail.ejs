<%- include('../components/header') %>
<!--<script type="text/javascript" src="../../public/js/public/jquery-3.1.1.js"></script>-->
<script type="text/javascript" src="../../public/js/task/taskDetail.js"></script>
<body>
    <div id="taskInformation" style="display: none" taskId=<%= task._id %>></div>
    <label>标题：</label>
    <p style="margin-left: 10px"><%- task.taskName %></p>
    <label>内容:</label>
    <div><%- task.content %></div>

    <% if(!isAccepted) { %>
        <button type="button" class="btn btn-info" id="buyTask">接受</button>
    <% } else if(isMajorWorker) { %>
        <button type="button" class="btn btn-info" id="askForPartner">征集同伴</button>
    <% } %>
    <% if(isAuthor) { %>
        <button type="button" class="btn btn-info" id="updateTask">更新</button>
    <% } %>
</body>


