<%- include('../../components/header') %>
<script type="text/javascript" src="../../../public/js/public/jquery-3.1.1.js"></script>
<link rel="stylesheet" type="text/css" href="../../../public/css/bootstrap.min.css"/>
<link rel="stylesheet" type="text/css" href="../../../public/support/chosen/chosen.min.css"/>
<script type="text/javascript" src="../../../public/support/chosen/chosen.jquery.min.js"></script>
<script type="text/javascript" src="../../../public/js/apps/score/add.js"></script>

</head>
<body>
<div class="form-group">
    <label for="scoreName" style="margin-left: 30px">打分标题</label>
    <input class="form-control" type="text" id="scoreName" placeholder="请输入打分标题" style="margin-left: 30px;width: 80%"/>
</div>
<div class="form-group">
    <label for="scoreOverView" style="margin-left: 30px">打分内容简介</label>
    <input class="form-control" id="scoreOverView" placeholder="请输入打分内容简介(非必填)" style="margin-left: 30px;width: 80%"/>
</div>
<div class="form-group">
    <label for="scoreLink" style="margin-left: 30px">打分链接</label>
    <input class="form-control" id="scoreLink" placeholder="请输入打分内容链接(非必填)" style="margin-left: 30px;width: 80%"/>
</div>

<div class="form-group">
    <label for="scorerChose" style="margin-left: 30px">参与人员:</label>
    <select id="scorerChose" class="chosen-search form-control" multiple style="width:350px;" tabindex="4">
        <option value="United States">United States</option>
        <option value="United Kingdom">United Kingdom</option>
        <option value="Afghanistan">Afghanistan</option>
        <option value="Albania">Albania</option>
    </select>
</div>

<p></p>

<label for="lowScore" style="margin-left: 30px">分数范围</label>
<div>
    <div class="col-lg-2">
        <div class="input-group">
            <input id="lowScore" style="margin-left: 10px" class="form-control" placeholder="最低分(暂时只支持整数)">
            <span class="input-group-addon">分</span>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="input-group">
            <input id="highScore" style="margin-left: 10px" class="form-control" placeholder="最高分(暂时只支持整数)">
            <span class="input-group-addon">分</span>
        </div>
    </div>
</div>

<div>
    <button id="scoreAddSubmit" class="btn btn-primary" type="button">提交</button>
</div>
</body>


<%- include('../../components/footer') %>